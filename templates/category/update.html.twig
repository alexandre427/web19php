{% extends "base.html.twig" %}

{% block body %}
    <h1>Modification de la catégorie "{{ category.CategoryName }}"</h1>
    <form method="post">
        <div class="form-group">
        <label for="Category">Quel est votre catégorie ?</label>
        <input class="form-control" type="text" name="CategoryName" value="{{ category.CategoryName }}">
        </div>


        <div class="form-group">
        <label for="Category">Quel est votre icon ?</label>
        <input class="form-control" type="icon" name="CategorySlug" value="{{ category.CategorySlug }}">
        </div>

        <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Enregistrer les modifications">
        </div>


        <div>
            <p>Exemple d'icon</p>
            <p>fas fa-bars</p>
            <p>fab fa-angrycreative</p>
        </div>
    </form>

{% endblock %}